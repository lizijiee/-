/* pages/info/paih/paih.wxss */
.woap{
  width: 100%;
  min-height: 100vh;
  background: #234467;
  overflow: hidden;
}
.banner{
  width: 90%;
  height: 410rpx;
  margin: 50rpx auto;
  position: relative;
}
.banner image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.mc{
  width: 88%;
  height: 100rpx;
  position: absolute;
  bottom: 50rpx;
  left: 50%;
  transform: translateX(-50%);
}
.mc view:nth-child(1){
  width: 130rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.mc view:nth-child(2){
  width: 130rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}
.mc view:nth-child(3){
  width: 130rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.mc view text{
  display: block;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
}
.mc view text:nth-child(1){
  width: 100%;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  color: #fff;
}
.mc view:nth-child(1) text:nth-child(2){
  color: #FF88CE;
}
.mc view:nth-child(2) text:nth-child(2){
  color: #ECDB75;
}
.mc view:nth-child(3) text:nth-child(2){
  color:#61D8D1;
}
.phs{
  width: 90%;
  margin: 50rpx auto;
}
.eve{
  width: 100%;
  height: 130rpx;
  border-bottom: 1rpx solid #979797;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  font-size: 30rpx;
}
.eve image{
  width: 80rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.eve view:nth-child(1){
  width: 70%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
}
.eve view:nth-child(2){
  margin-right: 20rpx;
}
.name{
  width: 100%;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.index{
  width: 50rpx;
}