/* pages/home/home.wxss */
.kong{
  width: 100%;
  height: 150rpx;
}
.vh{
  width: 100%;
  height: 90vh;
}
.woap{
  width: 100vw;
  min-height:calc(100vh - 11vh) ;
  padding-bottom: 50rpx 0;
}
.culum{
  width: 95%;
  margin: auto;
  background: #fff;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
  box-shadow:0 2rpx 12rpx 0 rgba（0，0，0，0.1）;
}
.culum .title{
  width: 92%;
  margin: auto;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.culum .title text{
  font-size:36rpx;
  font-weight: bold;
  padding-right: 15rpx;
}
.culum .title image{
  width: 28rpx;
  height: 24rpx;
}
.eves{
  width: 92%;
  margin: auto;
}
.eve{
  width: 100%;
  margin: auto;
  padding-bottom: 30rpx;
}
.eve image{
  width: 100%;
  height: 270rpx;
  border-radius: 30rpx;
}

.baer{
  width:100%;
  position: relative;
}
.baer text{
  display: inline-block;
  position: absolute;
  bottom: 30rpx;
  left: 30rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 40rpx;
  letter-spacing: 6rpx;
  text-shadow: 5rpx 5rpx 5rpx #000000;
}
.eve .desc{
  width: 90%;
  font-size:28rpx;
  color: #666;
  margin: 15rpx auto;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.headimg{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
}
.head{
  width: 95%;
  margin: 15rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.name{
  width: 100rpx;
  text-align: center;
}
.name text{
  display: block;
}
.name text:nth-child(1){
  width: 100rpx;
  font-size:26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.name text:nth-child(2){
  font-size: 22rpx;
}
.seach{
  width: 400rpx;
  height: 76rpx;
  border-radius: 100rpx;
  border: 1rpx solid #979797;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.seach image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 30rpx;
}
.seach input{
  width: 70%;
  font-size: 24rpx;
}
.int{
  width: 110rpx;
  text-align: center;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}
.int image{
  width: 58rpx;
  height: 58rpx;
  margin: auto;
}
.int text{
  font-size: 24rpx;
  font-weight: 400;
  color: #0C0C0C;
}
.navs{
  width: 100%;
  height: 176rpx;
  background: #FE5838;
  position: sticky;
  top: 0;
  z-index: 9;
}
.ation{
  color: #fff;
  position: absolute;
  bottom: 32rpx;
  left: 20rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.ation text{
  display: block;
  max-width: 360rpx;
  overflow: hidden;/*超出部分隐藏*/
  white-space: nowrap;/*不换行*/
  text-overflow:ellipsis;/*超出部分文字以...显示*/
}
.ation image{
  width: 30rpx;
  height: 15rpx;
  padding-left: 20rpx;
}
swiper{
  height: 356rpx;
  width: 92%;
  margin: 0rpx auto;
}
swiper-item {
  height: 100%;
  width: 100%;
  border-radius: 15rpx;
  overflow: hidden;
}
.slide-image{
  height: 100%;
  width: 100%;
}
.newuser{
  width: 98%;
  height: 280rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
}
.newuser image{
  width: 100%;
  height: 100%;
  animation:width 2s both infinite;
}
.display{
  width: 92%;
  margin: 40rpx auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.display image{
  width: 32%;
  height: 54rpx;
}
.lists{
  position: absolute;
  top: 80rpx;
  left: 68rpx;
  width: 78%;
  background: #fff;
  max-height: 240rpx;
  z-index: 9999;
}
.lists text{
  display: block;
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding-left: 15rpx;
}
.mains{
  width:500rpx;
  height: 400rpx;
  overflow: hidden;
}
.mains view{
  display: flex;
  align-items: center;
  width: 96%;
  height: 70rpx;
  color: #666;
  font-size: 26rpx;
  margin: 10rpx auto;
}

@keyframes width{
  0%{
    width: 100%;
    height: 100%;
  }
  50%{
    width: 90%;
    height: 90%;
  }
  100%{
    width: 100%;
    height: 100%;
  }
}
