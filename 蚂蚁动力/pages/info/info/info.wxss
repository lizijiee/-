/* pages/info/info/info.wxss */ 
.patriarch{
  width: 90%;
  margin: 70rpx auto;
}
.patriarch .xinx{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}
.patriarch .title{
  color: #666;
  font-size: 26rpx;
}
.patriarch .xinx text{
  font-size: 28rpx;
  color: #666;
  display: block;
  width: 40%;
}
.patriarch .xinx input{
  font-size: 28rpx;
  width: 60%;
}
.patriarch .xinx view{
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #FF7171;
  z-index: 99;
}
.patriarch:nth-child(2){
  margin-top: 100rpx;
}
.xinx .code{
  display: block;
}
.btn{
  width: 80%;
  height: 68rpx;
  margin: auto;
  background: linear-gradient(360deg, #F23232 0%, #F21E1E 55%, #FF7979 100%);
  border-radius: 20rpx;
  margin-top: 100rpx;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}